{
  "name": "typingspeedometer",
  "displayName": "typing-speed",
  "publisher": "edvilme",
  "description": "Advanced typing speed tracker with WPM, accuracy, and detailed analytics for developers",
  "version": "1.1.0",
  "icon": "docs/img/icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edvilme/typingspeedometer.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "typing",
    "speed",
    "wpm", 
    "accuracy",
    "statistics",
    "productivity",
    "performance",
    "analytics",
    "tracker"
  ],
  "activationEvents": [
    "onCommand:type"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typingspeedometer.showHighScore",
        "title": "Show High Scores"
      },
      {
        "command": "typingspeedometer.showDetailedStats",
        "title": "Show Detailed Statistics"
      },
      {
        "command": "typingspeedometer.textType",
        "title": "Text Typing"
      }
    ],
    "keybindings": [
      {
        "command": "typingspeedometer.showHighScore",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "typingspeedometer.showDetailedStats",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "properties": {
        "typingspeedometer": {
          "type": "object",
          "description": "Typing Speed extension settings.",
          "properties": {
            "sessionTimeout": {
              "type": "number",
              "default": 3000,
              "description": "Timeout duration for typing sessions in milliseconds.",
              "minimum": 0,
              "maximum": 60000
            },
            "displayFormat": {
              "type": "string",
              "default": "full",
              "enum": ["full", "wpm-only", "kps-only", "compact"],
              "enumDescriptions": [
                "Show WPM, KPS, and accuracy",
                "Show only words per minute",
                "Show only keystrokes per second", 
                "Show WPM and accuracy only"
              ],
              "description": "Choose what metrics to display in the status bar."
            },
            "showAccuracy": {
              "type": "boolean",
              "default": true,
              "description": "Whether to track and display typing accuracy."
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}